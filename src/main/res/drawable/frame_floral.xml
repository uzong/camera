<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 白色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
            <stroke android:width="2dp" android:color="#FFB6C1"/>
            <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp"/>
        </shape>
    </item>
    
    <!-- 装饰边框 -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="1dp" android:color="#FF69B4" 
                android:dashWidth="8dp" android:dashGap="4dp"/>
        </shape>
    </item>
    
    <!-- 四角装饰 -->
    <item android:gravity="top|left">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <size android:width="12dp" android:height="12dp"/>
                <solid android:color="#FF69B4"/>
            </shape>
        </rotate>
    </item>
    
    <item android:gravity="top|right">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <size android:width="12dp" android:height="12dp"/>
                <solid android:color="#FF69B4"/>
            </shape>
        </rotate>
    </item>
    
    <item android:gravity="bottom|left">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <size android:width="12dp" android:height="12dp"/>
                <solid android:color="#FF69B4"/>
            </shape>
        </rotate>
    </item>
    
    <item android:gravity="bottom|right">
        <rotate android:fromDegrees="45">
            <shape android:shape="oval">
                <size android:width="12dp" android:height="12dp"/>
                <solid android:color="#FF69B4"/>
            </shape>
        </rotate>
    </item>
</layer-list> 