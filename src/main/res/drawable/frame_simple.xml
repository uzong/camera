<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 白色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/>
        </shape>
    </item>
    
    <!-- 内层图片区域 -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="16dp"
                android:top="16dp"
                android:right="16dp"
                android:bottom="16dp"/>
            <stroke
                android:width="1dp"
                android:color="#E0E0E0"/>
        </shape>
    </item>
</layer-list> 