<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 浅灰色背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FAFAFA"/>
        </shape>
    </item>
    
    <!-- 内层图片区域 -->
    <item>
        <shape android:shape="rectangle">
            <padding
                android:left="22dp"
                android:top="22dp"
                android:right="22dp"
                android:bottom="22dp"/>
            <stroke
                android:width="1.5dp"
                android:color="#B8860B"/>
            <corners android:radius="4dp"/>
        </shape>
    </item>
</layer-list> 